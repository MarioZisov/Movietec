@using Movietec.Models.DbModels
@model IEnumerable<Movie>

<h2>Movies</h2>
@Html.ActionLink("Add Movie", "New", "Movies", null, new { @class = "btn btn-success" })
@if (!Model.Any())
{
    <p>We don't have any movies yet.</p>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
            {
            <tr>
                <td>@Html.ActionLink(movie.Title, "Edit", new { id = movie.Id })</td>
                <td>@movie.Genre</td>
            </tr>
        }
    </tbody>
</table>